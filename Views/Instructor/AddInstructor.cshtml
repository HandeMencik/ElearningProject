@model MyElearning.DataAccess.Entities.Instructor
@{
    ViewBag.Title = "AddInstructor";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h3>Yeni Eğitmen Kaydı</h3>
<form method="post">
    <br /><br />
    <label>Egitmen Adı</label>
    <input type="text" name="Name" class="form-control" />
    <br /><br />
    <label>Egitmen Soyadı</label>
    <input type="text" name="Surname" class="form-control" />
    <br /><br />
    <label>Egitmen Görseli</label>
    <input type="text" name="ImageUrl" class="form-control" />
    <br /><br />
    <button class="btn btn-primary">Eğitmeni Kaydet</button>

</form>

