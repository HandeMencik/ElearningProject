@model List<MyElearning.DataAccess.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>

                        </tr>
                    }
                </table>
                <td><a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Ekle</a></td>
            </div>
        </div>
    </div>
</div>

