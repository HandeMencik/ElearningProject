@model MyElearning.DataAccess.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<form method="post">
    <label>Kategori Id</label>
    @Html.HiddenFor(x => x.CategoryId, new { @Class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br /> <br />
    <button class="btn btn-primary">Kategoriyi Güncelle</button>
</form>
