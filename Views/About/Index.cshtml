@model List<MyElearning.DataAccess.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">
                    <tr>
                      
                        <th>Kurum Adı</th>
                        <th>Kurum Hakkında</th>
                        <th>Krurulus Tarihi</th>

                      
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.FoundedDate</td>
                            
            

                        </tr>
                    }
                </table>               
            </div>
        </div>
    </div>
</div>

