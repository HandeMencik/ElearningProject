@model List<MyElearning.DataAccess.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
               Referans Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Referans Adı Soyadı</th>                        
                        <th>Referans Yorumu</th>                        
                        <th>Sil</th>
                        <th>Güncelle</th>
                      
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TestimonialId</td>
                            <td><img src="@item.ImageUrl" style="height:80px;width:80px; border-radius:50%" /></td>
                            <td>@item.NameSurname</td>
                            <td>@item.Comment</td>
                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
                            

                        </tr>
                    }
                </table>
                <td><a href="/Testimonial/AddTestimonial/" class="btn btn-outline-primary">Yeni Referans Ekle</a></td>
            </div>
        </div>
    </div>
</div>

